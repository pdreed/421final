     <section class="input m-4">
        <h1 style="color: #111; font-family: 'Open Sans Condensed', sans-serif; font-size: 54px; font-weight: 500; line-height: 64px; margin: 0 0 0; padding: 20px 30px; text-align: center; text-transform: uppercase;">Add a New Player</h1>

        <h4 style="font-size: 30px; letter-spacing: -1px; color: #DFBF84; text-transform: uppercase; text-shadow: 1px 1px 0 #000, margin: 10px 0 24px; text-align: center; line-height: 50px; ">This page is useful for adding players that recently entered the league.</h4>
        <hr />
        <div class="row m-4">
            <div class="col-md-4">
                <form asp-action="Create" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Database ID</label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Team.Abbreviation" class="control-label">Team Abbreviation</label>
                        <input asp-for="Team.Abbreviation" class="form-control" required/>
                        <span asp-validation-for="Team.Abbreviation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeightFeet" class="control-label">Height (Feet)</label>
                        <input asp-for="HeightFeet" class="form-control" />
                        <span asp-validation-for="HeightFeet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeightInches" class="control-label">Height (Inches)</label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WeightPounds" class="control-label">Weight</label>
                        <input asp-for="WeightPounds" class="form-control" />
                        <span asp-validation-for="WeightPounds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <script>
                    $("#form").validate();
                </script>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </section>



