@model _421final.Models.PlayerRoot

@{
    Layout = "_PlayerRootLayout";
}

<body>
     <section class="input">
        <h1 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 46px; font-variant: small-caps; margin-top: 18px; margin-bottom: -8px;">Add a New Player</h1>

        <h4 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 26px; font-variant: small-caps;">This page is useful for adding players that recently entered the league.</h4>
        <hr />
        <div class="row">
            <div class="col-md-4" style="width:95%; font-family: DejaVu Sans Mono, monospace;">
                <form asp-action="Create" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Database ID</label>
                        <input asp-for="Id" class="form-control"/>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Team.Abbreviation" class="control-label">Team Abbreviation</label>
                        <input asp-for="Team.Abbreviation" class="form-control" required/>
                        <span asp-validation-for="Team.Abbreviation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeightFeet" class="control-label">Height (Feet)</label>
                        <input asp-for="HeightFeet" class="form-control" />
                        <span asp-validation-for="HeightFeet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeightInches" class="control-label">Height (Inches)</label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WeightPounds" class="control-label">Weight (Lbs)</label>
                        <input asp-for="WeightPounds" class="form-control" />
                        <span asp-validation-for="WeightPounds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <script>
                    $("#form").validate();
                </script>
            </div>
        </div>

        <div>
            <a asp-action="Index" style="background-color: red;border: none;color: white; border-radius: 5px;
              padding: 16px 32px;
              text-decoration: none;
              margin: 4px 2px;
              cursor: pointer;">Cancel</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </section>

</body>

