@model _421final.Models.PlayerRootTeamAndPlayerVM

@{
    ViewData["Title"] = "Delete";
    Layout = "_PlayerRootLayout";
}

<h1 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 46px; font-variant: small-caps; margin-top: 18px; margin-bottom: -8px;">Are you sure you want to delete @Html.DisplayFor(model => model.player.FirstName) @Html.DisplayFor(model => model.player.LastName), @Html.DisplayFor(model => model.team.Abbreviation)?</h1>

<div>
    <h4 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 26px; font-variant: small-caps;">If deleted, @Html.DisplayFor(model => model.player.FirstName) @Html.DisplayFor(model => model.player.LastName) will no longer exist in the database.</h4>
    <hr />
    <dl class="row" style="width:95%; font-family: DejaVu Sans Mono, monospace;">
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.player.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.player.Position)
        </dd>
        <dt class = "col-sm-2">
            Height (Feet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.player.HeightFeet)
        </dd>
        <dt class = "col-sm-2">
            Height (Inches)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.player.HeightInches)
        </dd>
        <dt class = "col-sm-2">
            Weight (Lbs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.player.WeightPounds)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="player.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"  style="background-color: black;border: none;color: white; border-radius: 5px;
          padding: 16px 32px;
          text-decoration: none;
          margin: 4px 2px;
          cursor: pointer;">Return to List</a>
    </form>
</div>
