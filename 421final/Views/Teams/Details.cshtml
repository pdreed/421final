@model _421final.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <table>
        <tr>
            <td>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.city)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.city)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.state)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.state)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.conference)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.conference)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.division)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.division)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.championshipsWon)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.championshipsWon)
                    </dd>
                </dl>
            </td>
            <td>
                <dd class = "col-sm-11">
                    @if (Model.TeamLogo != null)
                        {
                            var base64 = Convert.ToBase64String(Model.TeamLogo);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src="@imgSrc" style="height:300px;max-width:600px;border-radius:10%" />
                        }
                </dd>
            </td>
        </tr>
    </table>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
