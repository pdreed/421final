@page
@model LoginModel

<h1 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 46px; font-variant: small-caps; margin-top: 18px; margin-bottom: -8px;">Log in</h1>

<div class="row" style="margin-bottom: 90px;">
    <div class="col-md-4 m-3" style="font-family: DejaVu Sans Mono, monospace;">
        <section>
            <form id="account" method="post">
                <h2 style="text-align: center; font-family: DejaVu Sans Mono, monospace; font-size: 40px; font-variant: small-caps;">Enter your Credentials</h2>

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox" style="margin-left: 20px;">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #252638;border: none;color: white; border-radius: 5px;
                      padding: 16px 32px;
                      text-decoration: none;
                      margin: 4px 2px;
                      cursor: pointer;">Log in</button>
                </div>
                <div style="font-family: DejaVu Sans Mono, monospace; margin: 20px; text-align: center;">
                    OR
                </div>
                <div>
                    <p style="text-align: center;">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="background-color: #252638;border: none;color: white; border-radius: 5px;
                          padding: 16px 32px;
                          text-decoration: none;
                          margin: 4px 2px;
                          cursor: pointer;">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
